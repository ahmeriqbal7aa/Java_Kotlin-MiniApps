<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/todo_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/todo_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.myTheme">
        <activity android:name=".SplashScreen" android:noHistory="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- "windowSoftInputMode" same like a "SingleChildScrollView" -->
        <activity
            android:name=".UpdateCard"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name=".EnterDetails"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity android:name=".MainActivity">
        </activity>
    </application>

</manifest>